<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application>
        <activity
            android:name=".logs.view.LogActivity"
            android:exported="true"
            android:theme="@style/DebugAppTheme" />
        <activity
            android:name=".exception.view.ExceptionActivity"
            android:exported="true"
            android:theme="@style/DebugAppTheme" />
        <activity
            android:name=".navigation.view.NavigationStackActivity"
            android:exported="true"
            android:theme="@style/DebugAppTheme" />

        <service
            android:name=".debug.service.FloatingDebugViewService"
            android:enabled="true"
            android:exported="false" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="mezzari.torres.lucas.easy_debugger.library.provider"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />
        </provider>
    </application>

</manifest>